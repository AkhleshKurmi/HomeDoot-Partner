<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar/Header -->


        <!-- Job Availability Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_jobAvailable"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun, Nov 17\nAvailable"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon, Nov 18\nAvailable"
                android:layout_marginStart="32dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Job Status -->
        <TextView
            android:id="@+id/noJobsText"
            android:layout_below="@id/ll_jobAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="No new jobs"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- More Jobs Section -->
        <TextView
            android:id="@+id/moreJobsText"
            android:layout_below="@id/noJobsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="1 more job today"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/jobCard"
            android:layout_below="@id/moreJobsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/jobTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today 01:30 PM"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jobStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="CANCELLED"
                    android:textColor="#FF0000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/jobPerson"
                    android:layout_below="@id/jobTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sibanti chaudhury"
                    android:textSize="14sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Cult Section -->
        <TextView
            android:id="@+id/cultHeader"
            android:layout_below="@id/jobCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Cult"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cultRecyclerView"
            android:layout_below="@id/cultHeader"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <!-- Bottom Navigation -->


    </RelativeLayout>

</FrameLayout>